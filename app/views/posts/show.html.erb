<div class="container-fluid video-wrapper">
  <div class="video-image-container" style="background-image:url(<%= @post.image %>)">
  </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
            <div id="myElement">Loading the player...</div>
        </div>

        <div class="col-md-4">
        </div>

      </div>



        <script type="text/javascript">
            jwplayer("myElement").setup({
                file: "<%= @post.video %>",
                image: "<%= @post.image %>",
                stretching: "fill",
                width: "100%",
                aspectratio: "16:9"
            });
        </script>

      </video>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @post.title %></h1>
      <p><%= @post.impressionist_count %> Views</p>
      <p>By <a href="<%= @post.url %>"><%= @post.affiliate %></a> </p>
    </div>
  </div>
</div>

<p> </p>







<% if @post.user == current_user %>
  <td><%= link_to 'Edit', edit_post_path(@post) %></td>
  <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>