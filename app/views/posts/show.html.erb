<div class="container-fluid video-wrapper">
  <div class="video-image-container" style="background-image:url(<%= @post.image %>)">
    <div class="img-shadow-inpost"></div>
  </div>
    <div class="container video-player-wrapper">

      <div class="row">
        <div class="col-md-8">

          <div class="row">
            <div class="col-md-12">
              <div id="myElement">Loading the player...</div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 post-info">
              <div class="col-md-12 post-box">
                <div class="row">
                  <div class="col-md-8">
                    <h1><%= @post.title %></h1>
                    <h5>By <a href="<%= @post.url %>" class="affiliate"><%= @post.affiliate %> &bull; Join now for just $1!</a> </h5>

                  </div>
                  <div class="col-md-4 text-right">
                    <a class="btn"><i class="fa fa-heart icon"></i></a>
                    <a class="btn share-button" data-container="body" data-toggle="popover" data-placement="top"><i class="fa fa-share icon"></i></a>
                    <a class="btn"><i class="fa fa-download icon"></i></a>
                    <a class="btn"><i class="fa fa-flag icon"></i></a>
                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-12">
                     <div class="tag <%= @post.category %>"><%= @post.category %></div>
                     <div class="tag <%= @post.categorytwo %>"><%= @post.categorytwo %></div>
                  </div>
                </div>


              </div>
            </div>
          </div>

        </div>

        <div class="col-md-4">
        </div>

      </div>

      <div class='addthis_sharing_toolbox hidden' id="share-tools"></div>


        <script type="text/javascript">
            jwplayer("myElement").setup({
                file: "<%= @post.video %>",
                image: "<%= @post.image %>",
                stretching: "fill",
                width: "100%",
                aspectratio: "16:9"
            });
        </script>

        <script>
          $(document).ready(function(){
            $('.share-button').popover({ 
              html : true,
              content: function() {
                return $('#share-tools').html();
              }
            });
          });
        </script>
    </div>
</div>


<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-550c4ed51f276e5a" async="async"></script>




<% if @post.user == current_user %>
  <td><%= link_to 'Edit', edit_post_path(@post) %></td>
  <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>