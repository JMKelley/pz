
    <div class="container">

      <div class="row">
        
        <div class="col-md-9">
            <div id="myElement">Loading the player...</div>
        </div>

        <div class="col-md-3">
            
        </div>

      </div>

      <div class="row">
        <div class="col-md-9">
          <div class="container-fluid sidebar">
            <div class="row">
              <div class="col-md-12">
                <h1><%= @post.title %></h1>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <p class="meta"><%= @post.impressionist_count(:filter=>:all) %> views &middot; <a href="<%= @post.url %>"><%= @post.affiliate %></a></p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <p class="description"><%= @post.description %></p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <a href="<%= @post.url %>" class="view-more">Watch full on <%= @post.affiliate %> &rarr;</a>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="tags">
                  <% @post.categories.each do |category| %>
                      <%= link_to category_path(category) do %>
                        <div class="tag <%= category.name %>"><%= category.name %></div>
                      <% end %>
                  <% end %>
                </div>
              </div>
            </div>
  
        </div>     
      </div>
      </div>
    </div>
  </div>





        <script type="text/javascript">
            jwplayer("myElement").setup({
                file: "<%= @post.video %>",
                image: "<%= @post.image %>",
                stretching: "fill",
                width: "100%",
                aspectratio: "16:9"
            });
        </script>

    </div>






<% if @post.user == current_user %>
  <td><%= link_to 'Edit', edit_post_path(@post) %></td>
  <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>